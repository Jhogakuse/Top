<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgPhoto"
            android:layout_width="@dimen/image_item_size"
            android:layout_height="@dimen/image_item_size"
            android:src="@drawable/ic_account_box"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtViewNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/artist_hint_nombre"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="@dimen/main_padding_small"
            android:layout_toEndOf="@id/imgPhoto"
            android:layout_toStartOf="@+id/txtViewOrden"
            android:layout_centerVertical="true"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtViewOrden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/artist_hint_orden"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:drawableBottom="@drawable/ic_star"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>